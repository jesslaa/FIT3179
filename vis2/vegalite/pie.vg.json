{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 100 Billionaires in 2014 vs. Others",
  "data": {
    "url": "https://raw.githubusercontent.com/jesslaa/FIT3179/main/vis2/data/billionaires2014.csv"
  },
  "transform": [
    {
      "calculate": "if(datum.Rank <= 100, 'Top 100 Billionaires', 'Others')",
      "as": "Category"
    },
    {
      "aggregate": [
        {"op": "sum", "field": "Wealth Worth In Billions", "as": "Total Wealth"}
      ],
      "groupby": ["Category"]
    }
  ],
  "mark": "arc",
  "encoding": {
    "theta": {"field": "Total Wealth", "type": "quantitative", "stack": "normalize"},
    "color": {"field": "Category", "type": "nominal", "legend": {"title": "Total Wealth of Billionaires"}},
    "tooltip": [
      {"field": "Category", "type": "nominal", "title": "Name"},
      {"field": "Total Wealth", "type": "quantitative", "title": "Total Wealth in Billions (USD)"}
    ]
  },
  "view": {"stroke": null}
}
