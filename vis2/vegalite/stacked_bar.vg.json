{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Billionnaires by Regions",
  "data": {"url": "https://raw.githubusercontent.com/jesslaa/FIT3179/main/vis2/billionaires.csv"},
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Location Region",
      "type": "ordinal",
      "title": "Location"
    },
    "x": {
      "aggregate": "count",
      "type": "quantitative",
      "title": "Number of billionnaires"
    },
    "color": {
      "field": "Demographics Gender",
      "type": "nominal",
      "scale": {
        "domain": ["female", "male"],
        "range": ["#e7ba52", "#9467bd"]
      },
      "title": "Gender"
    },
    "tooltip": [
      {"field": "Location Region", "type": "nominal"},
      {"field": "Demographics Gender", "type": "nominal"},
      {"field": "__count", "type": "quantitative", "title": "Number"}
    ]
  }
}
